FROM scratch AS asteroid_core

COPY images/asteroid/files /

# Base Image
FROM ghcr.io/ublue-os/bazzite-nvidia-open:stable

# Copy asteroid_core
COPY images/asteroid/files/system_files /
COPY images/asteroid/files/system_files/etc/os-release /etc

RUN --mount=type=bind,from=asteroid_core,source=/,target=/asteroid_core \
    --mount=type=cache,dst=/var/cache \
    --mount=type=cache,dst=/var/log \
    --mount=type=tmpfs,dst=/tmp \
    /asteroid_core/scripts/setup/10-repos.sh

RUN --mount=type=bind,from=asteroid_core,source=/,target=/asteroid_core \
    --mount=type=cache,dst=/var/cache \
    --mount=type=cache,dst=/var/log \
    --mount=type=tmpfs,dst=/tmp \
    mkdir -p /nix

RUN --mount=type=bind,from=asteroid_core,source=/,target=/asteroid_core \
    --mount=type=cache,dst=/var/cache \
    --mount=type=cache,dst=/var/log \
    --mount=type=tmpfs,dst=/tmp \
    /asteroid_core/scripts/setup/10-packages.sh

# Finalize
#RUN --mount=type=bind,from=asteroid_core,source=/,target=/asteroid_core \
#    --mount=type=cache,dst=/var/cache \
#    --mount=type=cache,dst=/var/log \
#    --mount=type=tmpfs,dst=/tmp \
#    /asteroid_core/scripts/final/build-initramfs.sh

RUN --mount=type=bind,from=asteroid_core,source=/,target=/asteroid_core \
    --mount=type=cache,dst=/var/cache \
    --mount=type=cache,dst=/var/log \
    --mount=type=tmpfs,dst=/tmp \
    /asteroid_core/scripts/final/clean-up.sh

RUN bootc container lint
